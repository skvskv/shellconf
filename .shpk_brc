#!/bin/bash - sha-bang is needed to have syntax highlighting in various editors

# __force_gnu_environment='N'
__os_runtime__is_gnu_compatible='N'
case "${OSTYPE}" in
    *-gnu|msys|cygwin)
        echo 'Yay, its GNU!'
		__os_runtime__is_gnu_compatible='Y'
        ;;
    darwin*|*bsd*)
        echo 'BSD or Mac OS! :('
        ;;
    win*)
        echo 'Eh... windows?'
        ;;
    "")
        echo 'Eh? Eww!'
        ;;
    *)
        echo '?'
        ;;
esac

if [ z${_force_gnu_environment} = z'Y' ]
then
    __os_runtime__is_gnu_compatible='Y'
fi

export __os_runtime__is_gnu_compatible


## Speak English to me, please, due to your Russian is awful.
#export LANG="en_US.UTF-8"
##  For apache testconfig to operate properly
    export APACHE_USER="www-data"
##  DISPLAY setting:
#    export DISPLAY="10.3.7.45:0.0"



## Legacy inclusion, might come in hand as concept
    if [ -r ${HOME}/.server_aliases_ixtens ]; then
	. ${HOME}/.server_aliases_ixtens
    fi
PATH="$PATH:/opt/mule-standalone-3.5.0/bin"
## set PATH so it includes user's private bin and (so forth) if it exists
    if [ -d "$HOME/bin" ] ; then
	PATH="$HOME/bin:$PATH"
    fi
    if [ -d "$HOME/go/bin" ] ; then
	PATH="$HOME/go/bin:$PATH"
    fi
## Please let me use my local scripts or otherwise executable files
    if [ -d "$HOME/.executables/" ] ; then
        PATH="$HOME/.executables/:$PATH"
    fi
## ...and functions, also
    if test -d "${HOME}/.functions"; then
    	for i in ${HOME}/.functions/*.func; do
    		. ${i}
    	done
    fi





alias getip="dig +short "
alias getn="dig +short -x "
alias vir='vi -R'
# unalias ls
if [ z"${__os_runtime__is_gnu_compatible}" = z'Y' ]
then
    alias ls="ls --color=auto --show-control-chars --group-directories-first"
else
    alias ls="ls -Gw"
fi


#alias mysql='mysql --user=root --password=10eg2kpIFZ '

## Pretty-printing JSON 
if command -v jq >/dev/null
then
  alias jqq='jq '\''.'\'' '
fi
if command -v python >/dev/null
then
  alias jsonpp='python -m json.tool'
fi

## git aliases:
if command -v git >/dev/null
then
  alias gti='git '
  alias gs='git status -sb'
  alias gc='git commit '
  alias gco='git checkout '
  alias gl='git log '
  alias gls='git log --summary --name-status --graph --numstat --decorate --abbrev-commit'
  alias gbn='git checkout -b '
  alias gbl='git branch --list '
  alias gbla='git branch --list -a '
  alias gblr='git branch --list -r '
  alias git-autopush='$(git push 2>&1 | grep "git push")'
fi
